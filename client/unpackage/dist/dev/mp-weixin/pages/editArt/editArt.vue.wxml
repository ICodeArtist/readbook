      <view class="_view data-v-508e3a72">
        <picker mode="selector" range="{{caties}}" bindchange="handleProxy" data-eventid="{{'DrW-7'}}" data-comkey="{{$k}}" class="_picker data-v-508e3a72">
          <view class="_view data-v-508e3a72">{{caties[currentCateIndex]}}</view>
        </picker>
      </view>
    </view>
    <view class="_view data-v-508e3a72 submitNow" wx:if="{{artList.length > 0}}" bindtap="handleProxy" data-eventid="{{'T93-8'}}" data-comkey="{{$k}}">编辑</view>
  </view>
</template>