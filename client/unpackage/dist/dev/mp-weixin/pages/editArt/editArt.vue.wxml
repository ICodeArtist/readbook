        <view class="_view data-v-508e3a72 addText">
          <textarea name="artText" maxlength="-1" value="{{inputContent}}" bindinput="handleProxy" placeholder="请输入文本" data-eventid="{{'n4n-5'}}" data-comkey="{{$k}}" class="_textarea data-v-508e3a72" />
